<?xml version    = "1.0"
      encoding   = "UTF-8"
?>

<web-app xmlns              = "http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://xmlns.jcp.org/xml/ns/javaee
                               http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version = "4.0"
>

    <servlet>
        <servlet-name>HitCounterServlet</servlet-name>
        <servlet-class>pro.yoric.HitCounter.HitCounterServlet</servlet-class>
        <init-param>
            <param-name>localFilePath</param-name>
            <param-value>src/main/resources/img/</param-value> <!-- FOR LOCAL PROJECT REPOSITORY -->
        </init-param>
        <init-param>
            <param-name>webFilePath</param-name>
            <param-value>resources/img/</param-value> <!-- FOR DEPLOY-->
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>HitCounterServlet</servlet-name>
        <url-pattern>/task9m2</url-pattern>
    </servlet-mapping>

</web-app>